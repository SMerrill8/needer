<%= form_with(model: need) do |form| %>
  <% if need.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(need.errors.count, "error") %> prohibited this need from being saved:</h2>

      <ul>
        <% need.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    What type of a need is this?&nbsp;
     <%= form.select :type_id, options_from_collection_for_select(Type.all.where(supertype_id: 5), :id, :name, need.type_id) %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :long_description, style: "display: block" %>
    <%= form.text_area :long_description %>
  </div>

  <div>
    <%= form.label :begin_date, style: "display: block" %>
    <%= form.datetime_field :begin_date %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.datetime_field :end_date %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
