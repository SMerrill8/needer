<%= form_with model: @user, url: registration_path do |form| %>
    <% if form.object.errors.any? %>
        <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %></div>
        <% end %>
    <% end %>
    <div class="card text-bg-light border-primary position-absolute top-50 start-50 translate-middle"
     style="width: 30rem;">
        <div class="card-header border-dark fw-bold">Sign Up</div>
        <div class="card body row-gap-1">

            <div class="row mb-3 mx-3">
                <%= form.label :organization, class: "col-sm-4 col-form-label", for: "inputOrg" %>
                <div class="mx-3 col-sm-7">
                     <%= form.select :organization_id, options_from_collection_for_select(Organization.all, :id, :name, 1) %>
                </div>
            </div>

            <div class="row mb-3 mx-3">
                <%= form.label :email, class: "col-sm-4 col-form-label", for: "inputEmail" %>
                <div class="mx-3 col-sm-7">
                    <%= form.email_field :email, class: "form-control", id: "inputEmail" %>
                </div>
            </div>
            <div class="row mb-3 mx-3">
                <%= form.label :password, class: "col-sm-4 col-form-label" %>
                <div class="mx-3 col-sm-7">
                    <%= form.password_field :password, class: "form-control" %>
                </div>
            </div>
            <div class="row mb-3 mx-3">
                <%= form.label :password_confirmation, class: "col-sm-4 col-form-label" %>
                <div class="mb-3 col-sm-7">
                    <%= form.password_field :password_confirmation, class: "form-control" %>
                </div>
            </div>
            <div class="row-auto mx-3">
                <div class="mb-3">
                <%= form.submit "Sign Up" %>
                </div>
            </div>
        </div>
    </div>
<% end %>