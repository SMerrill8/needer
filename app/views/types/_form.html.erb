<%= form_with(model: type) do |form| %>
  <% if type.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(type.errors.count, "error") %> prohibited this type from being saved:</h2>
      <ul>
        <% type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    Please choose one:
     <%= form.collection_radio_buttons :supertype_id, Supertype.all, :id, :name %>
  </div>

