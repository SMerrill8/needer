<!DOCTYPE html>
<html>
	<head>
		<title>Meeting Needs Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
		<meta charset="utf-8">
			<meta name="viewport"
			      content="width=device-width, initial-scale=1.0">
				<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
				      rel="stylesheet"
				      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
				      crossorigin="anonymous">
				<link href="https://fonts.googleapis.com/icon?family=Material+Icons" 
					  rel="stylesheet">

    </head>
	<body>
		<nav class="navbar navbar-expand-lg bg-primary-subtle border-bottom">
				<a class="navbar-brand text-primary-emphasis" 
					href="<%= root_path %>"><span class="material-icons">rocket</span>Meeting Needs</a>
				<div class="fixed-bottom border-top" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto mb-2 mb-lg-0">
<% if user_signed_in? %>
						<li class="nav-item">
							<a class="nav-link"
								href="<%= edit_password_path %>">Edit Password</a>
						</li>
						<li class="nav-item">
							<%= button_to "Log out", session_path, method: :delete, class: "nav-link" %>
						</li> 		
<% else %>
						<li class="nav-item">
							<a class="nav-link"
								href="<%= new_registration_path %>">Sign Up<span class="material-icons">person_add</span>
							</a>
						</li>
						<li class="nav-item">
							<a class="nav-link"
								href="<%= new_session_path %>">Log In<span class="material-icons">login</span>
							</a>
						</li>
<% end %>
					</ul>
				</div>
			
		</nav>
	    <div> 
			<%= notice %>
		</div> 
		<div> 
			<%= alert %>
		</div> 

<%= yield %>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
				integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
				crossorigin="anonymous"/>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
				integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
				crossorigin="anonymous"/>
	</body>
</html>
