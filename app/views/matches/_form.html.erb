<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>
      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :resource_id, style: "display: block" %>
      <%= form.select :resource_id, options_from_collection_for_select(Resource.all, :id, :name) %>
  </div>

  <div>
    <%= form.label :need_id, style: "display: block" %>
      <%= form.select :need_id, options_from_collection_for_select(Need.all, :id, :name) %>
  </div>

  <div>
    <%= form.label :type_id, style: "display: block" %>
        <%= form.select :type_id, options_from_collection_for_select(Type.all, :id, :name) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
