<%= form_with model: @user, url: session_path do |form| %>
<div class="card text-bg-light border-primary position-absolute top-50 start-50 translate-middle"
     style="width: 25rem;">
	<div class="card-header border-dark fw-bold">Log In</div>
	<div class="card-body padding-x row-gap-1">
		<div>
            <%= form.label :email %>
            <%= form.email_field :email %>
		</div>
		<div>
            <%= form.label :password %>
            <%= form.password_field :password %>
		</div>
		<div type="button"
		     class="btn">
            <%= form.submit "Log In" %>
		</div>
		<a href="<%= new_password_reset_path %>"
		   class="card-link">Forgot your password?</a>
	</div>
</div>
<% end %>